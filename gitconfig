[user]
  name = Grant Welch
	useConfigOnly = true
[core]
  editor = /usr/bin/env vim
[push]
	default = current
	followTags = true
[color]
  ui = auto
[color "decorate"]
  branch = bold blue
  remoteBranch = dim red
  tag = ul dim cyan
  stash = reverse bold green
  HEAD = ul green
[color "branch"]
  current = reverse bold yellow
  local = yellow
  remote = dim red
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "grep"]
  filename = yellow bold
  linenumber = blue
[status]
  showUntrackedFiles = no
  short = true
  branch = true
[diff]
	tool = vimdiff
	algorithm = patience
	mnemonicPrefix = true
	wsErrorHighlight = all
[difftool]
  prompt = false
[merge]
	tool = vimdiff
[mergetool]
  prompt = false
[rerere]
  enabled = true
[alias]
  br = branch
  ci = commit -v
  co = checkout
  st = status
  up = pull --rebase
  update = pull --rebase
  amend = commit --amend --no-edit --reset-author
  reword = commit --amend --reset-author -v
  gg = grep -EIin --break --heading
  type = cat-file -t
  dump = cat-file -p
  last = cat-file -p HEAD
	logs = log --stat --format=fuller
	ll = log --stat --patch --format=fuller
  a = log --graph --pretty=format:\"%C(auto)%h -%d %s %C(green)(%cr) %C(bold blue)%aN <%aE>\" --all
  p = log --graph --pretty=format:\"%C(auto)%h -%d %s %C(green)(%cr) %C(bold blue)%aN <%aE>\" 
  u = log --graph --pretty=format:\"%C(auto)%h -%d %s %C(green)(%cr) %C(bold blue)%aN <%aE>\" HEAD @{u}
  bleach = clean -fdx
  dryclean = clean -ndx
  uncommit = reset HEAD^
  nuke = reset --hard --
  discard = checkout -f HEAD --
  unstage = reset HEAD --
  b = branch -vv
  r = remote -v
  latest = for-each-ref --sort='-authordate:iso8601' --format=' %(authordate:relative)%09%(refname:short)' refs/remotes/origin
  hs = shortlog -nes --no-merges
	ignore = update-index --assume-unchanged
	unignore = update-index --no-assume-unchanged
	chk = add -n .
	conflicts = diff --name-only --diff-filter=U
	root = rev-parse --show-toplevel
[pull]
  rebase = true
[fetch]
	prune = true
[rebase]
	autostash = true
[transfer]
	fsckObjects = true
