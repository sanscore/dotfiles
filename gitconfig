[user]
  name = Grant Welch
[core]
  editor = /usr/bin/env vim
[push]
  default = upstream
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "grep"]
  filename = yellow bold
  linenumber = blue
[status]
  showUntrackedFiles = no
  short = true
  branch = true
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[merge]
  conflictstyle = diff3
[rerere]
  enabled = true
[alias]
  amend = commit -a --amend --no-edit
  br = branch
  ci = commit
  co = checkout
  st = status
  stat = status -s -uno
  stl = status --long
  up = pull --rebase
  update = pull --rebase
  gg = grep -Iin --break --heading
  type = cat-file -t
  dump = cat-file -p
  last = cat-file -p HEAD
  logs = log --name-only
  a = "! git alog -20"
  alog = log --graph --pretty=format:\"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset\" --abbrev-commit --date=relative --all
  p = "! git plog -20"
  plog = log --graph --pretty=format:\"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset\" --abbrev-commit --date=relative
  u = "! git ulog -20"
  ulog = log --graph --pretty=format:\"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset\" --abbrev-commit --date=relative HEAD @{u}
  bleach = clean -fdx
  dryclean = clean -ndx
  uncommit = reset HEAD^
  undo = reset --hard --
  unstage = reset HEAD --
  b = branch -vv
  r = remote -v
  ll = log --stat --abbrev-commit
  latest = "! git for-each-ref --sort='-authordate:iso8601' --format=' %(authordate:relative)%09%(refname:short)' refs/remotes/origin"
  hs = "!git shortlog -s -n --no-merges"
  wc = "!git diff --stat -w"
[pull]
  rebase = true
